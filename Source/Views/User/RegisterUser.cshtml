@model TDP.Models.ViewModels.RegistrationViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2 class="text-info pt-2 pb-3">Create a new account</h2>  
  
<div class="row backgroundWhite border">  
  
    <div class="col-md-8">  
        <form asp-controller="User" asp-action="RegisterUser" method="post">  
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">  
                <div class="row">  
                    <div class="col-4">  
                        <label asp-for="@Model.Username"></label>  
                    </div>  
                    <div class="col-8">  
                        <input asp-for="@Model.Username" class="form-control" />  
                    </div>  
                    <span asp-validation-for="@Model.Username" class="text-danger"></span>  
                </div>  
            </div>  
            <div class="form-group">  
                <div class="row">  
                    <div class="col-4">  
                        <label asp-for="@Model.FirstName"></label>  
                    </div>  
                    <div class="col-8">  
                        <input asp-for="@Model.FirstName" class="form-control" />  
                    </div>  
                    <span asp-validation-for="@Model.FirstName" class="text-danger"></span>  
                </div>  
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-4">
                        <label asp-for="@Model.LastName"></label>  
                    </div>  
                    <div class="col-8">  
                        <input asp-for="@Model.LastName" class="form-control" />  
                    </div>  
                    <span asp-validation-for="@Model.LastName" class="text-danger"></span>  
                </div>  
            </div> 
            <div class="form-group">  
                <div class="row">  
                    <div class="col-4">  
                        <label asp-for="@Model.Email"></label>  
                    </div>  
                    <div class="col-8">  
                        <input asp-for="@Model.Email" class="form-control" />  
                    </div>  
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>  
                </div>  
            </div>  
            <div class="form-group">  
                <div class="row">  
                    <div class="col-4">  
                        <label asp-for="@Model.Password"></label>  
                    </div>  
                    <div class="col-8">  
                        <input asp-for="@Model.Password" class="form-control" type="password"/>  
                    </div>  
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>  
                </div>  
            </div>  
            <div class="form-group">  
                <div class="row">  
                    <div class="col-4">  
                        <label asp-for="@Model.ConfirmPassword"></label>  
                    </div>  
                    <div class="col-8">  
                        <input asp-for="@Model.ConfirmPassword" class="form-control" type="password"/>  
                    </div>  
                    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>  
                </div>  
            </div>  
  
            <div class="form-group">  
                <div class="row">  
                    <div class="col-4">  
                    </div>  
                    <div class="col-8">  
                        <button type="submit" class="btn btn-success form-control">Register</button>  
                    </div>  
                </div>  
            </div>  
        </form>  
    </div>  
  
</div>  
  
  
@section Scripts {  
    <partial name="_ValidationScriptsPartial" />  
}
